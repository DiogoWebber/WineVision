<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Linha 1 com HorizontalScrollView -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/mesa1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@color/green"
                        android:gravity="bottom"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:text="@string/mesa1"/>

                        <Button
                            android:id="@+id/btnMesaUm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/reservar"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mesa2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@color/green"
                        android:gravity="bottom"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:text="@string/mesa2"/>

                        <Button
                            android:id="@+id/btnMesaDois"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/reservar"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mesa3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@color/green"
                        android:gravity="bottom"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:text="@string/mesa3"/>

                        <Button
                            android:id="@+id/btnMesaTres"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/reservar"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Linha 2 com HorizontalScrollView -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/mesa4"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@color/green"
                        android:gravity="bottom"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:text="@string/mesa4"/>

                        <Button
                            android:id="@+id/btnMesaQuatro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/reservar"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mesa5"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@color/green"
                        android:gravity="bottom"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:text="@string/mesa5"/>

                        <Button
                            android:id="@+id/btnMesaCinco"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/reservar"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mesa6"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@color/green"
                        android:gravity="bottom"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:text="@string/mesa6"/>

                        <Button
                            android:id="@+id/btnMesaSeis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/reservar"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Linha 3 com HorizontalScrollView -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/mesa7"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@color/green"
                        android:gravity="bottom"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:text="@string/mesa7"/>

                        <Button
                            android:id="@+id/btnMesaSete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/reservar"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mesa8"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@color/green"
                        android:gravity="bottom"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:text="@string/mesa8"/>

                        <Button
                            android:id="@+id/btnMesaOito"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/reservar"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mesa9"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@color/green"
                        android:gravity="bottom"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:text="@string/mesa9"/>

                        <Button
                            android:id="@+id/btnMesaNove"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/reservar"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

    <!-- Campo para o número da mesa e botões de liberar e salvar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        </LinearLayout>
     <EditText
        android:id="@+id/etNumeroMesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número Mesa"
        android:inputType="number"
        android:layout_marginBottom="8dp"/>
        <Button
            android:id="@+id/btnLiberarMesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LIBERAR MESA"
            android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnReservarTodas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="RESERVAR TODAS AS MESAS"/>

    <Button
        android:id="@+id/btnConfiguracoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="CONFIGURAÇÕES"/>
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="LOGOUT"/>
</LinearLayout>
