<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="290dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/garamond"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:text="@string/nome"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editLoginAcesso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/garamond"
            android:hint="@string/digite_seu_nome"
            android:padding="15dp"
            android:textColorHint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/garamond"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:text="@string/senha"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editSenhaAcesso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/garamond"
            android:hint="@string/digite_sua_senha"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColorHint="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnEntrar"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/cinza"
                android:fontFamily="@font/garamond"
                android:text="@string/entrar"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/garamond"
                android:text="@string/esqueceu_sua_senha"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="normal" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
