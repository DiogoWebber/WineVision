<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    android:gravity="center"
    android:paddingTop="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="140dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/viewClientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CLIENTES"
                android:textColor="@color/white"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_edittext_background"
                android:drawableStart="@drawable/group"
                android:gravity="center_vertical|center_horizontal"
                android:drawablePadding="-20dp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <TextView
                android:id="@+id/viewVinhos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VINHOS"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_edittext_background"
                android:drawableStart="@drawable/wine"
                android:drawablePadding="-20dp"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <TextView
                android:id="@+id/viewVendas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VENDAS"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_edittext_background"
                android:drawableStart="@drawable/vendas"
                android:drawablePadding="-20dp"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <TextView
                android:id="@+id/viewRelatorioMensal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RELATÃ“RIO MENSAL"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_edittext_background"
                android:drawableStart="@drawable/relatorio"
                android:drawablePadding="-20dp"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_height="wrap_content"
                android:text="LOGOUT"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:backgroundTint="@color/cinza"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
