<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/GerarRelatorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gerar_relat_rio"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/garamond"
            android:padding="15dp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/relatorio"
            android:drawablePadding="10dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/gerarRelatorioCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/relat_rio_por_cliente"
            android:drawableStart="@drawable/group"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/garamond"
            android:padding="15dp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/gerarRelatorioMes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gerar_relatorio_mensal"
            android:textColor="@color/white"
            android:drawableStart="@drawable/month"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_edittext_background"
            android:fontFamily="@font/garamond"
            android:padding="15dp"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
